{{#if post}}
  <article class="post">
    <div class="info">
      <span>{{post.createdAt}}</span>
      <span>{{post.author}}</span>
    </div>
    <h1>{{post.name}}</h1>
    <p>{{post.text}}</p>
    <a href="/edit/{{post._id}}" class="btn-edit">
      <i class="fas fa-edit"></i>
    </a>
    <button class="btn-delete" data-id="{{post._id}}">
      <i class="fas fa-trash-alt" data-id="{{post._id}}"></i>
    </button>
  </article>
{{/if}}

<script src="/js/deletePost.js"></script>